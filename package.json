{
  "name": "shadow-scroll",
  "description": "Digital Shadowdark character sheet",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/pspeter3/shadow-scroll#readme",
  "bugs": {
    "url": "https://github.com/pspeter3/shadow-scroll/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/shadow-scroll.git"
  },
  "keywords": [
    "shadowdark",
    "ttrpg"
  ],
  "type": "module",
  "scripts": {
    "fix": "wireit",
    "test": "wireit"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.0"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "wireit": "^0.14.11"
  },
  "wireit": {
    "fix": {
      "command": "prettier --cache --write '*.md' '.github/workflows/*.yml'"
    },
    "test": {
      "dependencies": [
        "test:format"
      ]
    },
    "test:format": {
      "command": "prettier --cache --check '*.md' '.github/workflows/*.yml'",
      "files": [
        "*.md",
        ".github/workflows/*.yml"
      ],
      "output": []
    }
  }
}
