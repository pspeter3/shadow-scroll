{
  "name": "shadow-scroll",
  "description": "Digital Shadowdark character sheet",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/pspeter3/shadow-scroll#readme",
  "bugs": {
    "url": "https://github.com/pspeter3/shadow-scroll/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/shadow-scroll.git"
  },
  "keywords": [
    "shadowdark",
    "ttrpg"
  ],
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "fix": "wireit",
    "test": "wireit"
  },
  "dependencies": {
    "@react-router/node": "^7.5.0",
    "isbot": "^5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.0"
  },
  "devDependencies": {
    "@react-router/dev": "^7.5.0",
    "@tailwindcss/vite": "^4.1.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "happy-dom": "^17.4.4",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.8.3",
    "vite": "^6.2.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1",
    "wireit": "^0.14.11"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ]
  },
  "wireit": {
    "fix": {
      "command": "prettier --cache --write '*.{md,ts}' '.github/workflows/*.yml' 'app/**/*'"
    },
    "test": {
      "dependencies": [
        "test:format",
        "test:spec",
        "test:types"
      ]
    },
    "test:format": {
      "command": "prettier --cache --check '*.{md,ts}' '.github/workflows/*.yml' 'app/**/*'",
      "files": [
        "*.{md,ts}",
        ".github/workflows/*.yml",
        "app/**/*"
      ],
      "output": []
    },
    "test:spec": {
      "command": "vitest run",
      "files": [
        "app/**/*.{ts,tsx}"
      ],
      "output": []
    },
    "test:types": {
      "command": "tsc",
      "files": [
        "app/**/*.{ts,tsx}",
        "*.ts",
        "tsconfig.json"
      ],
      "output": [],
      "dependencies": [
        "typegen"
      ]
    },
    "typegen": {
      "command": "react-router typegen",
      "files": [
        "app/routes.ts",
        "app/routes/**/*.tsx",
        "!app/routes/**/*.test.tsx"
      ],
      "output": [
        ".react-router/**/*.d.ts"
      ]
    }
  }
}
